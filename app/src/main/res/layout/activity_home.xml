<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="com.viveckh.threestones.HomeActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:layout_marginTop="56dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Choose a Coin Face" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pick_coinFace"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose a Stone Color"
        android:id="@+id/textView5"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pick_stoneColor"
        android:layout_below="@+id/textView5"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Toss the Coin!"
        android:id="@+id/toss_the_coin"
        android:layout_below="@+id/pick_coinFace"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Result of toss"
        android:id="@+id/result_of_toss"
        android:layout_below="@+id/toss_the_coin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/humanStone"
        android:text="Human stone"
        android:layout_below="@+id/pick_stoneColor"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/result_of_toss"
        android:layout_alignEnd="@+id/result_of_toss" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Computer Stone"
        android:id="@+id/computerStone"
        android:layout_alignLeft="@+id/humanStone"
        android:layout_alignStart="@+id/humanStone"
        android:layout_below="@+id/humanStone"
        android:layout_alignRight="@+id/humanStone"
        android:layout_alignEnd="@+id/humanStone" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Proceed to the Game!"
        android:id="@+id/start_game"
        android:layout_below="@+id/computerStone"
        android:layout_alignLeft="@+id/toss_the_coin"
        android:layout_alignStart="@+id/toss_the_coin"
        android:layout_marginTop="36dp"
        android:onClick="onClick"/>
</RelativeLayout>
